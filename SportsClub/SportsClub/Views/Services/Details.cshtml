@model SportsClub.Models.Service

@{
    ViewData["Title"] = Model.Name;
}
<div class="banner">
	<div class="banner-title"></div>
	<img style="height: 500px; overflow: hidden" class="img-fluid" src="~/media/services/@Model.Image" alt="" />
</div>

<nav aria-label="breadcrumb">
	<ol class="breadcrumb bg-white">
		<li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Головна</a></li>
		<li class="breadcrumb-item"><a asp-area="" asp-controller="Services" asp-action="Index" asp-route-categoryName="@Model.Category.URLFriendlyName">Послуги: @Model.Category.Name</a></li>
		<li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
	</ol>
</nav>

<hr />

<div class="row">
	<div class="col-6 align-items-center">
		<h2>@ViewData["Title"]</h2>
		<div>@Html.Raw(Model.Description)</div>
		<h3>Ціна: @Model.Price.ToString("C2")</h3>
	</div>
	<div class="col-6 d-flex justify-content-end align-items-center">
		<a class="btn btn-secondary btn-lg" asp-area="" asp-controller="Services" asp-action="Services" asp-route-categoryName="@Model.Category.URLFriendlyName">Повернутись до переліку</a>
	</div>
</div>

<hr />

<div class="row">
	<div class="col-6">
		<img src="~/media/order_service.jpg" alt="" />
	</div>
	<div class="col-6 d-flex align-items-center order_service-background">
		<div class="row justify-content-center text-center">
			<h3>Замовте послугу в нашому клубі</h3>
			<h5 class="text-muted">Хочете отримати послугу? Заповніть форму і ми зв'яжемось із вами.</h5>
			<a class="btn btn-danger btn-lg" asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id">Замовити послугу</a>
		</div>
	</div>
</div>

