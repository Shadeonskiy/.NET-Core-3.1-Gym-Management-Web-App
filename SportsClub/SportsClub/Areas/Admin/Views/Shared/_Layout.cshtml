@using System.Web
@using Microsoft.AspNetCore.Identity
@using SportsClub.Areas.Identity.Data

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Area</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.7/sb-1.3.4/sp-2.0.2/sl-1.4.0/datatables.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-danger navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Dominator</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Admin" asp-controller="Home" asp-action="Index">Головна</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Admin" asp-controller="Roles" asp-action="Index">Ролі</a>
                        </li>
                        <li class="nav-item btn-group dropdown">
                            <button class="btn text-white dropdown-toggle"
                                    type="button"
                                    id="dropdownMenuButton"
                                    data-toggle="dropdown"
                                    aria-hashpopup="true"
                                    aria-expanded="false">
                                    Користувачі
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <a class="nav-link text-dark dropdown-item" asp-area="Admin" asp-controller="Users" asp-action="Index">Перелік користувачів</a>
                                <a class="nav-link text-dark dropdown-item" asp-area="Admin" asp-controller="Orders" asp-action="Index">Замовлення</a>
                            </div>
                        </li>
                        <li class="nav-item btn-group dropdown">
                            <button class="btn text-white dropdown-toggle" 
                                    type="button"
                                    id="dropdownMenuButton"
                                    data-toggle="dropdown"
                                    aria-hashpopup="true"
                                    aria-expanded="false">Адмін панель</button>
                            <div class="dropdown-menu text-dark" aria-labelledby="dropdownMenuButton2">
                                <a class="nav-link text-dark dropdown-item" asp-area="Admin" asp-controller="Services" asp-action="Index">Контроль послуг</a>
                                <a class="nav-link text-dark dropdown-item" asp-area="Admin" asp-controller="Memberships" asp-action="Index">Контроль абонементів</a>
                            </div>
                        </li>
                    </ul>
                    
                </div>
            </div>
            <partial name="_LoginPartial.cshtml" />
        </nav>
    </header>
    <div class="container" style="max-width: 1400px;">
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col">
                    <partial name="_NotificationPartial" />
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.7/sb-1.3.4/sp-2.0.2/sl-1.4.0/datatables.min.js"></script>
    @*<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.min.js"></script>*@
    @RenderSection("Scripts", required: false)
</body>
</html>
