@model IEnumerable<Service>

@{
    ViewData["Title"] = "Послуги";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Створити нову послугу</a>
</p>
<table id="myTable" class="table table-bordered table-hover table-sm">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Ціна</th>
            <th>Категорія</th>
            <th>Фото</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) 
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price.ToString("C2")</td>
            <td>@item.Category.Name</td>
            <td>
                <img src="/media/services/@item.Image" width="100" alt="">
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Оновити</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="confirmDeletion">Видалити</a>
            </td>
        </tr>
    }
    </tbody>
</table>

